        <description>ServletContextListener</description>
        <listener-class>br.logging.log4j.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>br.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
